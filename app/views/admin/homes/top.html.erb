<div class ="container">
  <div class = "row">

    <h2>注文履歴一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
           </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.updated_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.all.sum(:amount) %></td>
             </tr>
           <% end %>
           <%= paginate @orders %>
        </tbody>
      </table>

  </div>
</div>