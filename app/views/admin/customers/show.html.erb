<h2><%= @customer.full_name %>さんの会員詳細</h2>

<table class = "ml-3">
    <tr class = "py-4">
        <th>会員ID</th>
        <td class = "pl-3"><%= @customer.id %></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td class = "pl-3"><%= @customer.full_name %></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td class = "pl-3"><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td class = "pl-3"><%= @customer.postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td class = "pl-3"><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td class = "pl-3"><%= @customer.telephone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td class = "pl-3"><%= @customer.email %></td>
    </tr>
    <tr>
        <th>会員ステータス</th>
        <td class = "pl-3">
            <% if @customer.is_deleted == true %>
                退会
            <% else %>
                有効
            <% end %>
        </td>
    </tr>
</table>
<div class = "text-center">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
    <%= link_to "注文履歴一覧を見る", admin_path %>
</div>
