<h2><%= @customer.full_name %>さんの会員情報編集</h2>
<div class = "row">
  <div class = "col-md-12">
    <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">会員ID</label>
          <%= @customer.id %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">氏名</label>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">フリガナ</label>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">郵便番号</label>
          <%= f.text_field :postal_code %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">住所</label>
          <%= f.text_field :address %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">電話番号</label>
          <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group col-xs-9 ml-5">
          <label class = "col-sm-4">メールアドレス</label>
          <%= f.text_field :email %>
      </div>

      <div class="form-group col-xs-9 ml-5">
        <label class = "col-sm-4">会員ステータス</label>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会', value: true %>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効', value: false %>
      </div>

      <div class = "actions text-center">
        <%= f.submit '変更を保存' %>
      </div>
    <% end %>
  </div>
</div>
