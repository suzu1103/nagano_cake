<div class = "row">

    <h2>ジャンル一覧・追加</h2>

    <div class = "col-md-11">
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @genre, url:admin_genres_path do |f| %>
          <h4>ジャンル名</h4>
              <%= f.text_field :name %>

              <%= f.submit '新規登録' %>
      <% end %>
    </div>

    <table class ="table mt-5 col-md-4">
      <tr>
        <thead>
          <th>ジャンル</th>
          <th></th>
        </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
          </tbody>
        <% end %>
      </tr>
    </table>

</div>