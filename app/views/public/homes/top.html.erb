        <div class ="card text-white" style = "width:600px">
          <div class = "card-img"><%= image_tag 'togitsuFTHG2329.jpg.webp', width: '600px', height: '375px' %></div>
        <!--, width: '50%', height: 'auto'-->
          <div class="card-img-overlay d-flex align-items-end">
