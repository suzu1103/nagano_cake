      <div class = "py-5 col-md-12">
        <h3>新着商品</h3>
        <div class = "d-flex">
          <% @items.each do |item| %>
            <div class = "px-2">
              <div class = "card border-0" style = "width:200px">
                  <div class = "card-img">
                    <%= link_to item_path(item.id) do %>
                      <%= image_tag item.image, width: '200', height: 'auto' %>
                    <% end %>
                  </div>
                    <p class = "card-title"><%= item.name %></p>
                    <p class = "card-text">¥<%= converting_to_jpy(item.price) %></p>
              </div>
            </div>
          <% end %>
        </div>
            <div class = "text-right"><%= link_to "商品一覧 >>", items_path, class: 'nav-link text-dark' %></div>
      </div>

  </div>

