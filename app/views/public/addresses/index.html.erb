<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto text-center">

      <h2>配送先一覧／一覧</h2>
      <%= form_with model: @address, url:addresses_path, method: :post do |f| %>
        <div class="form-group">
          <label class = "col-md-4">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <label class = "col-md-2">住所</label>
          <%= f.text_field :address, size: 60 %>
        </div>

        <div class="form-group">
          <label class = "col-md-2">宛名</label>
          <%= f.text_field :name %>
        </div>

        <%= f.submit '新規登録' %>

      <% end %>

      <table class = "table pt-5">
        <thead>
          <tr>
            <th scope = "col">郵便番号</th>
            <th scope = "col">住所</th>
            <th scope = "col">宛名</th>
            <th scope = "col"></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-sm btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "削除しますか？", class:"btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>


      </table>

    </div>
  </div>
</div>


