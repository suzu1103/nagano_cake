  <div>
   <h2>配送先一覧／一覧</h2>

      <%= form_with model: @address, url:addresses_path, method: :post do |f| %>
          <label class = "col-md-4">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>

        <div>
          <label class = "col-md-4">住所</label>
          <%= f.text_field :address, size: 60 %>
        </div>

        <div>
          <label class = "col-md-4">宛名</label>
          <%= f.text_field :name %>
        </div>
        <div class="actions text-center mt-4">
          <%= f.submit '新規登録', class: "btn btn-sm btn-outline-dark" %>
        </div>

      <% end %>

      <table class = "table mt-5">
        <thead>
          <tr>
            <th scope = "col">郵便番号</th>
            <th scope = "col">住所</th>
            <th scope = "col">宛名</th>
            <th scope = "col"></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-sm btn-info" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "削除しますか？", class:"btn btn-sm btn-outline-dark" %>
              </td>
            </tr>
          <% end %>
        </tbody>


      </table>

  </div>


