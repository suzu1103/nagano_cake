<h2>配送先編集</h2>
      <%= form_with model: @address, url:address_path, method: :patch do |f| %>
        <div class="form-group">
          <label class = "col-md-4">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <label class = "col-md-2">住所</label>
          <%= f.text_field :address, size: 60 %>
        </div>

        <div class="form-group">
          <label class = "col-md-2">宛名</label>
          <%= f.text_field :name %>
        </div>

        <%= f.submit '変更内容を保存' %>
      <% end %>

