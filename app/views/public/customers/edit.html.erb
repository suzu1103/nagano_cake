<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
            <label>氏名</label>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>

            <label class = "col-md-3">フリガナ</label>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>

            <label class = "col-md-4">郵便番号(ハイフンなし)</label>
            <%= f.text_field :postal_code %>

            <label class = "col-md-4">住所</label>
            <%= f.text_field :address, size: 60 %>

            <label class = "col-md-4">電話番号</label>
            <%= f.text_field :telephone_number %>

            <label class = "col-md-4">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

  <%= f.submit "編集内容を保存", class:"btn btn-sm btn-primary" %>
  <%= link_to "退会する", confirm_customers_path, class: "btn btn-sm btn-danger" %>




<% end %>