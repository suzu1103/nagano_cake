<div>
  <h2>会員情報編集</h2>
  <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
            <div>
              <label class = "col-md-4">氏名</label>
              <%= f.text_field :last_name, autofocus: true %>
              <%= f.text_field :first_name %>
            </div>
            <div>
              <label class = "col-md-4">フリガナ</label>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </div>
            <div>
              <label class = "col-md-4">郵便番号(ハイフンなし)</label>
              <%= f.text_field :postal_code %>
            </div>
            <div>
              <label class = "col-md-4">住所</label>
              <%= f.text_field :address, size: 60 %>
            </div>
            <div>
              <label class = "col-md-4">電話番号</label>
              <%= f.text_field :telephone_number %>
            </div>
            <div>
              <label class = "col-md-4">メールアドレス</label>
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
            <div class="actions text-center mt-4">
              <%= f.submit "編集内容を保存", class:"btn btn-sm btn-info" %>
              <%= link_to "退会する", confirm_customers_path, class: "btn btn-sm btn-outline-secondary" %>
            </div>
  <% end %>
</div>