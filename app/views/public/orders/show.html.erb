<div class ="container">
  <div class = "row">
      <h2 class = "col-11">注文履歴詳細</h2>

      <table class = "col-7">
        <caption>注文情報</caption>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
        <% @total = 0 %>
        <!--↑each文の中に記述すると、毎回毎回リセットされて、最後のしか反映されなくなる！↑-->

        <% @order_details.each do |order_detail| %>
        <% @total += (order_detail.item.with_tax_price * order_detail.amount) %>
        <% end %>

      <table class = "col-5 pb-5">
        <caption>請求情報</caption>
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>

        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost = 800 %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>

      <table class = "col-8">
        <caption>注文内容</caption>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>