<div class ="container">
  <div class = "row">
      <h2 class = "col-11">注文履歴詳細</h2>

      <table class = "table col-7">
        <caption>注文情報</caption>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>

      <table class = "table col-5">
        <caption>請求情報</caption>
        <tr>
          <th>商品合計</th>
          <!--% @total = 0 %>-->
          <!--% @total += @order.items.with_tax_price * @order.amount %>-->
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost = 800 %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
  </div>
</div>