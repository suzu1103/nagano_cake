<h2>注文履歴一覧</h2>
<div class="container">
  <div class="row no-gutters">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">注文詳細</th>
        </tr>
       </thead>

       <tbody>
         <% @order.each do |order| %>
            <tr>
                <td><%= order.updated_at.strftime('%Y/%m/%d') %></td>
                <td>
                    <%= order.postal_code %>
                    <%= order.address %>
                    <%= order.name %>
                </td>
                <td>
                  <% order.order_details.each do |order_detail| %>
                    <div class = "d-flex flex-column">
                      <%= order_detail.item.name %>
                    </div>
                  <% end %>
                </td>
                <td><%= converting_to_jpy(order.total_payment) %>円</td>
                <td><%= link_to "表示する", order_path(order.id), class:"btn btn-outline-dark" %></td>
            </tr>
         <% end %>
       </tbody>


    </table>
  </div>
</div>
